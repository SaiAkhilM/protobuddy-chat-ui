# Production Environment Variables for ProtoBuddy

# Database Configuration
POSTGRES_PASSWORD=your_secure_postgres_password_here
DATABASE_URL=postgresql://protobuddy:your_secure_postgres_password_here@postgres:5432/protobuddy

# Redis Configuration
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_URL=redis://:your_secure_redis_password_here@redis:6379

# API Keys (REQUIRED)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
APIFY_API_TOKEN=your_apify_api_token_here

# Service URLs
FRONTEND_URL=https://your-domain.com
BACKEND_URL=https://api.your-domain.com/api

# Security
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_32_character_encryption_key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

# Scraping Configuration
SCRAPE_DELAY_MS=2000
MAX_CONCURRENT_SCRAPES=2
SCRAPE_TIMEOUT_MS=45000

# Cache Configuration
CACHE_TTL_SECONDS=7200
CACHE_MAX_SIZE=50000